<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/profileimage"
        android:src="@drawable/ic_profile">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:text="USERNAME"
        android:layout_toRightOf="@id/profileimage"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/onlineimage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/profile"
        app:civ_border_color="#05df29"
        app:civ_border_width="12dp"
        android:layout_below="@id/username"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="-18dp"
        android:layout_toEndOf="@id/profileimage"
        android:layout_toRightOf="@id/username"
        android:visibility="gone"></de.hdodenhof.circleimageview.CircleImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/offlineimage"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/profile"
        app:civ_border_color="#bfbfbf"
        app:civ_border_width="12dp"
        android:layout_below="@id/username"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="-18dp"
        android:layout_toEndOf="@id/profileimage"
        android:layout_toRightOf="@id/username"
        android:visibility="visible"></de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messagelast"
        android:layout_toRightOf="@id/profileimage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@id/username"
        android:maxLines="1"
        />

</RelativeLayout>